<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.jikexueyuan.accountingt.AddRecordActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout"

        ></RelativeLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25">


            <TableLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_weight="1">

                    <Button

                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:background="@android:color/white"
                        android:text="7"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/keyboard_seven"
                        android:layout_height="match_parent"
                        />

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@android:color/white"
                        android:text="8"
                        android:id="@+id/keyboard_eight"
                        android:textColor="@color/colorPrimaryDark"
                        />

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@android:color/white"
                        android:text="9"
                        android:id="@+id/keyboard_nine"
                        android:textColor="@color/colorPrimaryDark"
                        />

                </TableRow>

                <TableRow
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="4"
                        android:id="@+id/keyboard_four"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="match_parent"

                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="5"
                        android:id="@+id/keyboard_five"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="match_parent"

                        />

                    <Button
                        android:layout_height="match_parent"

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="6"
                        android:id="@+id/keyboard_six"
                        android:textColor="@color/colorPrimaryDark"
                        />

                </TableRow>

                <TableRow
                    android:layout_weight="1">

                    <Button
                        android:layout_height="match_parent"

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="1"
                        android:id="@+id/keyboard_one"
                        android:textColor="@color/colorPrimaryDark"
                        />

                    <Button
                        android:layout_height="match_parent"

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="2"
                        android:id="@+id/keyboard_two"
                        android:textColor="@color/colorPrimaryDark"
                        />

                    <Button
                        android:layout_height="match_parent"

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="3"
                        android:id="@+id/keyboard_three"
                        android:textColor="@color/colorPrimaryDark"
                        />

                </TableRow>


                <TableRow
                    android:layout_weight="1">

                    <Button
                        android:layout_height="match_parent"

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text=" "
                        />

                    <Button
                        android:layout_height="match_parent"

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="0"
                        android:id="@+id/keyboard_zero"
                        android:textColor="@color/colorPrimaryDark"
                        />

                    <Button
                        android:layout_height="match_parent"

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="."
                        android:id="@+id/keyboard_dot"
                        android:textColor="@color/colorPrimaryDark"
                        />

                </TableRow>


            </TableLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                >

                <ImageButton

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cost"
                    android:id="@+id/keyboard_category"
                    android:background="@android:color/white"
                    />

                <ImageButton
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backspace"
                    android:id="@+id/keyboard_backspace"
                    android:background="@android:color/white"
                    />

                <ImageButton

                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/done"
                    android:id="@+id/keyboard_done"
                    android:background="@android:color/white"
                    />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
